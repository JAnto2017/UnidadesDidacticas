<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FundamentaMetodo_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#439AA2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtv1v6"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:text="4.- FUNDAMENTACIÓN METODOLÓGICA"
            android:textAlignment="center"
            android:textColor="#6A1B9A"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn1v6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF8F00"
            android:onClick="goPrimera_II"
            android:text="MODELO DE ENSEÑANZA" />

        <Button
            android:id="@+id/btn2v6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EF6C00"
            android:onClick="goSegunda_II"
            android:text="FUNDAMENTOS METODOLÓGICOS" />

        <Button
            android:id="@+id/btn3v6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D84315"
            android:onClick="goTercera_II"
            android:text="@string/secuencia_de_actividades" />

        <Button
            android:id="@+id/btn4v6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AD1457"
            android:onClick="back_5"
            android:text="@string/regresar" />

        <Button
            android:id="@+id/btn5v6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#71DA24"
            android:onClick="goCuarta_II"
            android:text="PROPUESTAS DE APARTADOS" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>